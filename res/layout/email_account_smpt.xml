<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent" 
            android:layout_height="fill_parent"
            android:layout_weight="1" >

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 android:orientation="vertical" 
                 android:layout_width="fill_parent"
                 android:layout_height="fill_parent"
                 android:layout_weight="1" >
        <TableRow android:layout_marginBottom="2dip"
                  android:layout_width="fill_parent">
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:orientation="vertical" 
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:layout_weight="1">
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:orientation="vertical" 
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:background="#FF222222" 
                          android:layout_weight="1">
     
                <EditText android:id="@+id/mail_username"
                          android:imeOptions="actionNext"
                          android:padding="3dip" 
                          android:layout_width="fill_parent" 
                          android:layout_height="wrap_content"
                          android:hint="@string/mail_username"/>

                <EditText android:id="@+id/mail_password"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:password="true"
                          android:imeOptions="actionNext"
                          android:padding="3dip"
                          android:hint="@string/mail_password"/>
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                          android:orientation="vertical" 
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:background="#FF555555" 
                          android:layout_weight="1">
                <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                             android:orientation="vertical" 
                             android:layout_width="fill_parent"
                             android:layout_height="wrap_content"
                             android:layout_weight="1">
                    <TableRow android:layout_marginBottom="2dip"
                              android:layout_width="fill_parent">
                        <EditText android:id="@+id/mail_smtp_host"
                                  android:layout_width="fill_parent"
                                  android:layout_height="wrap_content"
                                  android:imeOptions="actionNext"
                                  android:padding="3dip"
                                  android:layout_weight="1"
                                  android:hint="@string/mail_smtp_host"/>
                    </TableRow>

                    <TableRow android:layout_marginBottom="2dip"
                              android:layout_width="fill_parent">
                        <EditText android:id="@+id/mail_smtp_port"
                                  android:layout_width="80px"
                                  android:layout_height="wrap_content"
                                  android:imeOptions="actionNext"
                                  android:numeric="integer"
                                  android:padding="3dip"
                                  android:hint="@string/mail_smtp_port"/>
                    </TableRow>

                    <TableRow>
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content" 
                                  android:text="@string/mail_smtp_auth"
                                  android:padding="3dip" />
                        <CheckBox android:id="@+id/mail_smtp_auth"
                                  android:layout_width="fill_parent"
                                  android:layout_height="wrap_content"
                                  android:imeOptions="actionNext"
                                  android:padding="3dip" />
                    </TableRow>

                    <TableRow>
                        <TextView android:layout_width="wrap_content"
                                  android:layout_height="wrap_content" 
                                  android:text="@string/mail_smtp_start_tls_enable"
                                  android:padding="3dip" />
                        <CheckBox android:id="@+id/mail_smtp_start_tls_enable"
                                  android:layout_width="fill_parent"
                                  android:layout_height="wrap_content"
                                  android:imeOptions="actionNext"
                                  android:padding="3dip" />
                    </TableRow>
                </TableLayout>

                <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                             android:orientation="vertical" 
                             android:layout_width="fill_parent"
                             android:layout_height="wrap_content"
                             android:layout_weight="1">
                    <TableRow android:layout_marginBottom="2dip"
                              android:layout_width="fill_parent">
                        <EditText android:id="@+id/mail_smtp_socket_factory_port"
                                  android:layout_width="80px"
                                  android:layout_height="wrap_content"
                                  android:imeOptions="actionNext"
                                  android:numeric="integer"
                                  android:padding="3dip"
                                  android:hint="@string/mail_smtp_socket_factory_port"/>
                    </TableRow>
                </TableLayout>

                <EditText android:id="@+id/mail_smtp_socket_factory_class"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:imeOptions="actionNext"
                          android:padding="3dip"
                          android:hint="@string/mail_smtp_socket_factory_class"/>
            </LinearLayout>
            </LinearLayout>
        </TableRow>
    
        <TableRow android:layout_marginBottom="2dip" 
                  android:gravity="bottom"
                  android:layout_width="fill_parent"
                  android:background="#FF222222" 
                  >
            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                         android:orientation="vertical" 
                         android:layout_width="fill_parent"
                         android:layout_height="wrap_content"
                         android:shrinkColumns="*"  
                         android:stretchColumns="*"
                         android:layout_weight="1">
                <TableRow android:layout_marginBottom="2dip">
                    <Button android:id="@+id/mail_properties_button_back" 
                            android:text="@string/back"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" />
                    <Button android:id="@+id/mail_properties_button_test" 
                            android:text="@string/test"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" />
                    <Button android:id="@+id/mail_properties_button_next" 
                            android:text="@string/next"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" />
                </TableRow>
            </TableLayout>
        </TableRow>
    </TableLayout>
</ScrollView>
